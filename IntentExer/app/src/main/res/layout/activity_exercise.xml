<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseActivity">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Shiba"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/average_weight_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/average_weight_value"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text_view" />

    <TextView
        android:id="@+id/average_weight_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6.8 - 11 kg"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/average_weight_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintStart_toEndOf="@id/average_weight_title"
        app:layout_constraintTop_toTopOf="@id/average_weight_title" />

    <TextView
        android:id="@+id/average_height_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/average_height_value"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/average_weight_value" />

    <TextView
        android:id="@+id/average_height_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="33 - 43 cm"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/average_height_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintStart_toEndOf="@id/average_height_title"
        app:layout_constraintTop_toTopOf="@id/average_height_title" />

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/average_height_title"/>




